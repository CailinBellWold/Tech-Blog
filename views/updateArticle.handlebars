<div class='container-fluid'>
  <div class='row'>
    <div class='col-md-5'>
      <h2>Update Article</h2>
      <small id='updateArticleHelp' class='form-text text-muted'>NOTE: The title and content fields cannot be blank.</small>
      <form class='updateArticleForm'>
        <div class='form-group'>
          <label for='article-title'>Title</label>
          <input type='text' class='form-control' id='articleTitle' value='{{article.title}}'>
        </div>
        <div class='form-group'>
          <label for='article-content'>Content</label>
          <input type='text' class='form-control' id='articleContent' value='{{article.content}}'>
        </div>
        <button class='btn btn-primary submit' id='btn-save' type='submit'>Save</button>
        <button class='btn btn-warning submit' id='btn-cancel' type='reset'>Cancel</button>
      </form>
    </div>
  </div>
</div>

<script src="/js/updateArticle.js"></script>