<div class='container-fluid'>
  <div class='row'>
    <div class='col-md-5'>
      <h2>Sign Up</h2>
      <form class='signupForm'>
        <div class='form-group'>
          <label for='username'>Username</label>
          <input type='text' class='form-control' id='username-signup' placeholder='Enter Username'>
          <small id='usernameHelp' class='form-text text-muted'>Your username should be between 2 and 36 characters in length.</small>
        </div>
        <div class='form-group'>
          <label for='password'>Password</label>
          <input type='password' class='form-control' id='password-signup' placeholder='Enter Password'>
          <small id='passwordHelp' class='form-text text-muted'>Your password should be a minimum of 8 characters in length.</small>
        </div>
        <button class='btn btn-primary' id='btn-signup' type='submit'>Sign Up >></button>
      </form>
    </div>

